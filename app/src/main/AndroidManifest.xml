<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="groupproject.utd.badasscalendar" >

    <uses-permission android:name="android.permission.READ_CALENDAR" />
    <uses-permission android:name="android.permission.WRITE_CALENDAR" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AgendaView"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_agenda_view"
            android:screenOrientation="portrait"
            android:theme="@style/FullscreenTheme" >
        </activity>
        <activity
            android:name=".WeeklyView"
            android:label="@string/title_activity_weekly_view"
            android:theme="@style/AppTheme.NoActionBar" >

        </activity>
        <activity
            android:name=".MonthlyView"
            android:label="@string/title_activity_monthly_view"
            android:screenOrientation="portrait">
        </activity>
    </application>

</manifest>
